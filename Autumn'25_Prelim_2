#include <stdio.h>
#include <kipr/wombat.h>
int main()
{
    int flag;
    flag = 1;

    //pin turn
    if (flag = 1) {

    //turn 90
    motor(0, 100);
    motor(3, -100);
    msleep(1000);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();

    //turn 180
    motor(0, 100);
    motor(3, -100);
    msleep(2160);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();

    //turn 270
    motor(0, 100);
    motor(3, -100);
    msleep(3350);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();

    //turn 360
    motor(0, 100);
    motor(3, -100);
    msleep(4700);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();
    }
    //swing turn
    else{
//turn 90
    motor(0, 100);
    motor(3, 0);
    msleep(1000);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();

    //turn 180
    motor(0, 100);
    motor(3, 0);
    msleep(2160);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();

    //turn 270
    motor(0, 100);
    motor(3, 0);
    msleep(3350);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();

    //turn 360
    motor(0, 100);
    motor(3, 0);
    msleep(4700);
    ao();
    motor(0, 0);
    motor(3, 0);
    msleep(1000);
    ao();
    }
    
    return 0;
}
